<%= form_for(@customer) do |f| %>
  <% if @customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
      <% @customer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :ruc, "R.U.C. *", :class => "bold" %><br />
    <%= f.text_field :ruc %>
  </div>
  
  <div class="field">
    <%= f.label :name, "Razon Social *", :class => "bold" %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :address1, "Direccion " %><br />
    <%= f.text_field :address1 %>
  </div>
  <div class="field">
    <%= f.label :address2, "Distrito" %><br />
    <%= f.text_field :address2 %>
  </div>
  <div class="field">
    <%= f.label :city,"Provincia" %><br />
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :state,"Departamento" %><br />
    <%= f.text_field :state %>
  </div>
  <div class="field">
    <%= f.label :zip, "ZIP/Codigo Postal" %><br />
    <%= f.text_field :zip %>
  </div>
  <div class="field">
    <%= f.label :country ,"Pais" %><br />
    <% if @edit %>
      <%= f.select :country, countries_array %>
    <% else %>
      <%= f.select :country, options_for_select(countries_array, "Peru") %>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :account, "Codigo interno" %><br />
    <%= f.text_field :account, :onclick => "$(this).select();" %>
  </div>
  <div class="field">
    <%= f.label :phone1, "Phone 1" %><br />
    <%= f.text_field :phone1 %>
  </div>
  <div class="field">
    <%= f.label :phone2, "Phone 2" %><br />
    <%= f.text_field :phone2 %>
  </div>
  
  <div class="field">
    <%= f.label :comments %><br />
    <%= f.text_area :comments %>
  </div>

  
  <div class="field">
    <%= f.check_box :taxable %>
    <%= f.label :taxable %>
  </div>
  
  
  
  
  <div class="actions">
    <%= f.label :tipo, "Tipo Credito <1: credito 2:Pago Adelantado 3:Contado >" %><br />
    <%= f.text_field :tipo %>
  </div>
  
  <h3> Precios por descuentos </h3>
  <div class="field">
      <%= f.label :d01, "GAS 84 ", :class => "bold" %><br />
      <%= f.number_field :d01  ,:step => 0.01 %>
  </div>
  <div class="field">
      <%= f.label :d02, "GAS 90 ", :class => "bold" %><br />
      <%= f.number_field :d02 ,:step => 0.01 %>
  </div>
  
  <div class="field">
      <%= f.label :d03, "GAS 95 ", :class => "bold" %><br />
      <%= f.number_field :d03 ,:step => 0.01 %>
  </div>
  <div class="field">
      <%= f.label :d04, "GAS 98 ", :class => "bold" %><br />
      <%= f.number_field :d04 ,:step => 0.01 %>
  </div>
  
  <div class="field">
      <%= f.label :d05, "DIESEL B5 S50 ", :class => "bold" %><br />
      <%= f.number_field :d05 ,:step => 0.01 %>
  </div>
  
  <div class="field">
      <%= f.label :d06, "G.L.P. ", :class => "bold" %><br />
      <%= f.number_field :d06 ,:step => 0.01 %>
  </div>
    
  <div class="field">
      <%= f.label :d06, "Producto. ", :class => "bold" %><br />
      <%= f.number_field :d99 ,:step => 0.01 %>
  </div>
 
  <div class="actions">
    <%= f.hidden_field :company_id %>
    <%= f.submit %>
  </div>
 
  
<% end %>
