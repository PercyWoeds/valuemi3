    comma = wb.styles.add_style :num_fmt => 3
    super_funk = wb.styles.add_style :format_code => '[Green]#'
    
    wb.add_worksheet(name: "Basic work sheet") do |sheet|
    
    sheet.add_row ["Fecha", "Serie", "Numero", "Cod.Cli.","Cliente","Cod.Prod.","Producto", "Cantidad ","Precio","Importe","Imp.Lista","Cod.Emp.","Facturado","F.Pago" ], :style => title 
    
   @contado_rpt1.each do |payment|
     
    sheet.add_row [payment.fecha,payment.serie,payment.numero,payment.cod_cli,payment.get_cliente(payment.cod_cli), payment.cod_prod,payment.get_product_name(payment.cod_prod),payment.cantidad,payment.precio,payment.importe,payment.implista,payment.cod_emp,payment.get_vale_facturado,payment.cod_tar], :style => [date,cadena,cadena,cadena,cadena,cadena,cadena,currency,currency,currency,currency,cadena,cadena,cadena]
    
   end
   
   
   
   
end
end 

    
