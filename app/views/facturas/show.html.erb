        </td>
        <td class="bordered_bottom bordered_right">
          <%= money(quote.total) %>
        </td>
        
        
          
          <td><%= link_to 'Eliminar',[@invoice,quote], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
