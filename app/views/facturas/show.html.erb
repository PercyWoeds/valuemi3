    <%= doDate(@invoice.date_processed) %>
  <% end %>
</div>

<p>
  <b>Return:</b>
  <%= @invoice.get_return %>
</p>

<p>
  <strong>Seller:</strong>
  <%= link_to @invoice.user.username, @invoice.user %>
</p>

