

<% if @stocks.count > 0 %>
  <table>
    <thead>
      <tr>
        <th class="bordered_right bordered_bottom" style="width: 100px;">
          Codigo
        </th>
        <th class="bordered_right bordered_bottom" style="width: 250  px;">
          Descrip
        </th>
        <th class="bordered_right bordered_bottom">
          Stock
        </th>
        <th class="bordered_right bordered_bottom">
          Costo
        </th>
        
      </tr>
    </thead>
    <tbody>
      <% for product in @stocks %>
        <tr>
          <td class="bordered_right bordered_bottom">
            <% if product.product.code and product.product.code != "" %>

              <%= link_to product.product.code, "/purchases/list_ingresos/#{product.product.id}"   %>

            <% else %>
              &nbsp;
            <% end %>
          </td>
          
          <td class="bordered_right bordered_bottom">
            <%=  product.product.name  %>
          </td>
          <td class="bordered_right bordered_bottom">
            <% if product.quantity %>
              <%= product.quantity %>
            <% else %>
              &nbsp;
            <% end %>
          </td>
          
          <td class="bordered_right bordered_bottom right">
            <%= money(product.unitary_cost) %>
          </td>
          
        </tr>
      <% end %>
    </tbody>
  </table>

<% else %>
  <p class="error">
    We couldn't find any products.
  </p>
<% end %>
