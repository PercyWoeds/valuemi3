<p id="notice"><%= notice %></p>

<h1>Listing Tirads</h1>

<table>
  <thead>
    <tr>
      <th>Employee</th>
      <th>Turno</th>
      <th>Fecha</th>
      <th>Documento</th>
      
      <th>Importe</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tirads.each do |tirad| %>
      <tr>
        <td><%= tirad.employee.full_name %></td>
        <td><%= tirad.turno %></td>
        <td><%= tirad.fecha %></td>
        
        <td><%= tirad.documento  %></td>
        <td><%= tirad.importe %></td>
        <td><%= link_to 'Ver', tirad %></td>
        <td><%= link_to 'Editar', edit_tirad_path(tirad) %></td>
        <td><%= link_to 'Eliminar', tirad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @tirads %>
<br>

<div class="button" >
<%= link_to 'Nuevo Deposito', new_tirad_path %><h2>Importar Archivo  "*.csv"</h2>
</div>


<%= form_tag import_tirads_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Importar " %>
<% end %>



 Download:
  <%= link_to "CSV", tirads_path(format: "csv"), multipart: true  %> 
  



