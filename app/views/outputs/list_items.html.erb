<p class="bold big">
  Products:
</p>


  <table>
    <thead>
      <tr>
        <th class="small bordered_bottom bordered_right">
          Producto
        </th>
        <th class="small bordered_bottom bordered_right">
          Precio
        </th>
        <th class="small bordered_bottom bordered_right">
          Cantidad
        </th>
        <th class="small bordered_bottom bordered_right">
          Descuento
        </th>
        <th class="small bordered_bottom bordered_right">
          Total
        </th>
      </tr>
    </thead>
    <tbody>
      <% for product in @products %>
        <tr>
          <td class="small bordered_bottom bordered_right" style="width: 220px;">
            <a href="#" onclick="removeItemFromOutput(<%= product.i %>); return false;" title="Remove product from invoice"><%= product.full_name %></a>
            [<a href="#" onclick="removeItemFromOutput(<%= product.i %>); return false;" title="Remove product from invoice">X</a>]
          </td>
          <td class="small bordered_bottom bordered_right">
            <%= money(product.price) %>
          </td>
          <td class="small bordered_bottom bordered_right">
            <%= product.quantity %>
          </td>
          <td class="small bordered_bottom bordered_right">
            <%= money(product.discount) %>%
          </td>
          <td class="small bordered_bottom bordered_right">
            <%= money(product.CurrTotal) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
