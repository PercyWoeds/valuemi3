<%= simple_form_for(@other_income) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

<div class="field">
      <%= f.label :fecha %><br />
      <%= f.date_field    :fecha  %>
    </div>

  
  <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field  :name  %>
    </div>


    <div class="field">
      <%= f.label :documento %><br />
      <%= f.text_field  :documento  %>
    </div>



  <div class="field">
      <%= f.label :employee_id,"Empleado: " %><br />
      <%= f.select :employee_id,options_from_collection_for_select(@employees,'id','full_name') %>
    </div>
   <div class="field">
      <%= f.label :importe, "Importe: ", :class => "bold" %><br />
      <%= f.number_field :importe,:step => 0.01 %>
    </div>

   
    <div class="field">
      <%= f.label :turno,"Turno "%><br>
      <%= f.select :turno, options_for_select([["TURNO 1",1],["TURNO 2",2],["TURNO 3",3],["TURNO 4",4]]) %>
    </div>

 


  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
