
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.css">
<script
  src="https://code.jquery.com/jquery-3.1.1.min.js"
  integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
  crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.js"></script>





<div id='container' style='height:500px;width:1400px;overflow-x:scroll'>

<br>


    
  <%= month_calendar(events: @tipocambios) do |dia, meetings|  %>


 
</div>

<table class="ui celled striped table">
   <thead>
    <tr><th colspan="3">
       <%= dia.strftime("%d") %>

    </th>
  </tr></thead>
 
  <tbody>
   
  <% meetings.each do |meeting| %>

     
      <td class="collapsing">
        <div>
          <a class="ui teal  label">
     Compra : <%= meeting.compra.to_s  %>
</a>
    </div>
      <div>
   <a class="ui yellow label">
      Venta : <%= meeting.venta.to_s  %>   
   </a>

    </div>
    </td>



  <% end %>
</tbody>
  
</table>

<% end %>


  <div class="buttons" >

<%= link_to 'Nuevo Tipocambio', new_tipocambio_path   ,class: "ui orange submit button" %>

</div>

<h2>Importar Archivo "*.csv"</h2>

<%= form_tag import_tipocambios_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Importar " %>
<% end %>






</div>

